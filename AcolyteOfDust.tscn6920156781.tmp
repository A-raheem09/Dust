resource_name = "AcolyteOfDust"
script/source = "extends CharacterBody2D

# Movement
const SPEED := 150.0
const JUMP_VELOCITY := -400.0
var facing_right := true
var drops = ['skeleton','cow','goblin']
# Health
var MaxHealth := 50
var Health := MaxHealth

# Projectile
@onready var projectile_scene = preload(\"res://plagueball.tscn\")
@export var projectile_speed := 400
func _physics_process(delta):
	# Gravity
	if not is_on_floor():
		velocity += get_gravity() * delta
	# Jump
	if Input.is_action_just_pressed(\"Up\") and is_on_floor():
		velocity.y = JUMP_VELOCITY

	# Horizontal movement
	var direction := Input.get_axis(\"Left\", \"Right\")
	if direction != 0:
		velocity.x = direction * SPEED
		$AnimatedSprite2D.play(\"Walk\")
		facing_right = direction > 0
		$AnimatedSprite2D.flip_h = not facing_right
	else:
		velocity.x = move_toward(velocity.x, 0, SPEED)
		$AnimatedSprite2D.play(\"default\")
	move_and_slide()

func _input(event):
	if event.is_action_pressed(\"attack_ranged\"):
		_shoot_plague_ball()
func _shoot_plague_ball():
	var projectile = projectile_scene.instantiate()
	Take_Damage(2)
	# Offset in front of player depending on facing direction
	var offset = Vector2(20, 0) * (1 if facing_right else -1)
	projectile.global_position = global_position + offset
	
	# Set projectile velocity towards mouse
	var dir = (get_global_mouse_position() - projectile.global_position).normalized()
	projectile.velocity = dir * projectile_speed  # This should now work
	
	get_tree().current_scene.add_child(projectile)
func Take_Damage(damage : int):
	Health -= damage
	if Health <= 0:
		global_position = Vector2(69, 120)
"

